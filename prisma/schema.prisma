// schema.prisma

generator client {
  provider             = "prisma-client-js"
  output               = "./node_modules/@prisma/client"
  createShadowDatabase = false
  binaryTargets        = ["native", "debian-openssl-3.0.x"] // Tambahkan ini
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id         Int      @id @default(autoincrement())
  title      String
  content    String
  date       DateTime
  img        String   @default("not found")
  authorName String   
}
