// schema.prisma

generator client {
  provider             = "prisma-client-js"
  output               = "./src/db/client"
  createShadowDatabase = false
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id         Int      @id @default(autoincrement())
  title      String
  content    String
  date       DateTime
  img        String   @default("not found")
  authorName String   
}
